rootdir="${1:-/}"
gwhost=$(ipfs config Addresses.Gateway | cut -d'/' -f 3)
gwport=$(ipfs config Addresses.Gateway | cut -d'/' -f 5)
peerid=$(ipfs config Identity.PeerID)

echo rootdir: $rootdir
if qmfiles=$(ipfs files stat --hash $rootdir) 2>/dev/null; then
 if key=$(ipfs key list -l | grep -w files | cut -d' ' -f 1); then
 echo key: $key
 echo qmfiles: $qmfiles
 ipfs --offline name publish --key=files --allow-offline /ipfs/$qmfiles 1>/dev/null 2>&1 
 echo url: http://gateway.ipfs.io/ipns/$key
 echo url: http://$gwhost:$gwport/ipfs/$qmfiles
 time ssh serv01 ipfs name publish --key=files --allow-offline /ipfs/$qmfiles 2>/dev/null | sed -e 's/^/info: /'
 fi
else
 echo no $rootdir
fi
