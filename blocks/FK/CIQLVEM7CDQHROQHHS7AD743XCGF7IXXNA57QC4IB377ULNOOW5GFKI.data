#simple, #basic, #prop, #propdetail, #modal { box-shadow:2px 20px 10px rgba(0, 0, 0, 0.40); }
.extra { 
 background: lightblue;
}
div {
 position: relative;
 max-width: 940px;
 margin-left: 100px;
 margin: auto;
 background: transparent;

 /* background-image: linear-gradient(to bottom right, white,darkgrey); */

 padding: 2em;
 border-radius: 1px;
 font-size: 14px;
}
h1,h2,h3,h4,h5 { text-align: left; }

div.content {
 opacity: 0.86;
 width: 84%;
 padding: 3em;

 background: lightyellow;
 background-image: linear-gradient(to bottom left, white,lightyellow);
 border-radius: 2px;
 box-shadow:2px 20px 10px rgba(0, 0, 0, 0.40);
}

p {  text-align: justify; text-align-last: left; }
pre { overflow: auto }

img { max-width: 90% } 

#banner {
  left: -6px;
  padding: 12px 0 12px 24px;
  width: 98%; margin: auto;  
  margin-bottom: 0; position:fixed; top:0; z-index: -1;
  background-color: black; /* rgba(20,20,20,0.5); */
  background-image: URL({{BANURL}}), linear-gradient(to right, black,darkblue);
  background-size: auto 100%;
  background-position: right bottom;
  background-repeat: no-repeat;
  opacity: none;
  position: fixed;
  color: blue;
}

