export BRNG_HOME=${IBRNGHOME:-$HOME/.brings}
export IPMS_HOME=${IPMS_HOME:-$HOME/.ipms}
export PATH="$IPMS_HOME/bin:$BRNG_HOME/bin:$PATH"

gateway=$(ipms config Addresses.Gateway)
gwport=$(echo $gateway | cut -d/ -f 5)
gwhost=$(echo $gateway | cut -d/ -f 3)

api=$(ipms config Addresses.API)
apiport=$(echo $api | cut -d/ -f 5)
apihost=$(echo $api | cut -d/ -f 3)

cat > _data/ipms.yml <<EOT
--- # ipms webui and gateway parameters
gwport: $gwport
apiport: $apiport
gateway: http://$gwhost:$gwport
webui: http://$apihost:$apiport
EOT


xdg-open http://$apihost:$apiport/webui
