
¨ #!/usr/bin/perl

local $/ = undef;
my $buf = <STDIN>;
use YAML::Syck qw(Load Dump);

$buf = "--- \n" . $buf if ($buf !~ m/^---/);
$buf =~ y/\t/ /;
#printf "buf: %s\n",$buf;

my $yml = Load($buf);
#printf "yml: %s\n",Dump($yml);

my $LF = ($#ARGV > 0) ? "\n" : '';
if (@ARGV) {
foreach (@ARGV) {
  if (ref($yml->{$_}) eq 'HASH') {
    print Dump($yml->{$_}),$LF;
  } elsif (ref($yml->{$_}) eq 'ARRAY') {
    print Dump($yml->{$_}),$LF;
  } else {
    print $yml->{$_},$LF;
  }
}
} else {
 printf "%s...\n",YAML::Syck::Dump($yml);
}

exit $?;
1;
