bpath=/tmp/blockchaindemo

gateway=$(ipms config Addresses.Gateway)
gwport=$(echo $gateway | cut -d/ -f 5)
gwhost=$(echo $gateway | cut -d/ -f 3)

qm=$(echo "IPFS is active" | ipms --offline add -n -Q --hash id)
if curl -s -S -I http://$gwhost:$gwport/ipms/$qm | grep -q X-Ipfs-Path; then
  echo "cleaning while ipms is still running"
  ipms files rm -rf /tmp/blockchaindemo
  ipms files ls -l /tmp
else
  echo "cleaning IPFs repository completely"
  rm -rf $HOME/.brings/ipms/blocks/??
  rm -rf $HOME/.brings/ipms/datastore
  ls -l $HOME/.brings/ipms/blocks
fi

echo "removing local copy for toc and block*"
rm -f _data/toc.yml
rm -f _includes/block[0-9].txt

